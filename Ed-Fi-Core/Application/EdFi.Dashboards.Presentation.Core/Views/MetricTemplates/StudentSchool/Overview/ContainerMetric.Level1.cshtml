@model ContainerMetric
<tr id="vMetric@(Model.MetricVariantId)">
	<td title="@(Model.ToolTip)" class="bulleted-metric bulleted-metric-border">
		<i class="icon-right-circled"></i>
		<span class="title">
			<h2>
				<a href="@(Url.Content(Model.Url))" id="vName@(Model.MetricVariantId)">
					@(Model.DisplayName)
				</a>
			</h2>
			@if (!string.IsNullOrEmpty(Model.Context)) {
				<span id="vContext@(Model.MetricVariantId)">&nbsp;(@(Model.Context))</span>
			}
			<span id="vDescription@(Model.MetricVariantId)" class="description">@Model.Description</span>
		</span>
	</td>
	<td class="bulleted-metric-border"></td>
	<td class="bulleted-metric-border"></td>
</tr>
